name: ucmp-lab # Unequal Cost Multiple Paths

topology:
  kinds:
    srl:
      # Need IXR D2 or D3 for EVPN/VXLAN support
      type: ixrd2 # See https://www.nokia.com/networks/products/7250-interconnect-router/
      # Uses custom container image containing auto-startup-config agent
      # image: registry.srlinux.dev/pub/srlinux # latest, or srlinux:21.3.1-410
      image: srl/auto-config:latest
      # license: ../license.key
      env:
        SPINES: 2 # TODO subtract this from host ID
      binds:
      - /sys/fs/cgroup:/sys/fs/cgroup:ro

  nodes:
    leaf1:  { kind: srl, startup-config: auto-leaf.cfg.json }
    leaf2:  { kind: srl, startup-config: auto-leaf.cfg.json }
    leaf3:  { kind: srl, startup-config: auto-leaf.cfg.json }
    # Can use "i-" in name for iBGP peering
    spine1: { kind: srl, startup-config: auto-spine.cfg.json }
    spine2: { kind: srl, startup-config: auto-spine.cfg.json }

    h1: { kind: srl, startup-config: auto-host-with-vip.cfg.json }
    h2: { kind: srl, startup-config: auto-host-with-vip.cfg.json }
    h3: { kind: srl, startup-config: auto-host-with-vip.cfg.json }
    h4: { kind: srl, startup-config: auto-host.cfg.json }

  links:
    - endpoints: ["leaf1:e1-1","spine1:e1-1"]
    - endpoints: ["leaf2:e1-1","spine1:e1-2"]
    - endpoints: ["leaf3:e1-1","spine1:e1-3"]
    - endpoints: ["leaf1:e1-2","spine2:e1-1"]
    - endpoints: ["leaf2:e1-2","spine2:e1-2"]
    - endpoints: ["leaf3:e1-2","spine2:e1-3"]

    - endpoints: ["h1:e1-1","leaf1:e1-3"] # This currently assigns router ID .3, based on leaf port
    - endpoints: ["h2:e1-1","leaf1:e1-4"]

    - endpoints: ["h3:e1-1","leaf2:e1-3"]

    # Connect as LAG, test auto-create lag logic
    - endpoints: ["h4:e1-1","leaf3:e1-4"]
    - endpoints: ["h4:e1-2","leaf2:e1-4"]
