vrrp_instance MAIN {
  state MASTER
  interface bond0
  virtual_router_id 2
  use_vmac
  # optional: vmac_xmit_base to use physical interface for VRRP messages
  priority 200
  advert_int 1
  unicast_src_ip 10.0.0.102
  unicast_peer {
    10.0.0.103
  }
  authentication {
    auth_type PASS
    auth_pass pwd1
  }
  virtual_ipaddress {
    10.0.0.100/24 dev bond0
  }
  track_interface {
    bond0
  }
}